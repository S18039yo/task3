<table class="table table-user">
  <thead>
    <tr>
      <%= image_tag user.get_profile_image(100,100), fallback: "no_image.jpg" %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>フォロー数:</th>
      <th><%= user.followings.count %></th>
    </tr>
    <tr>
      <th>フォロワー数:</th>
      <th><%= user.followers.count %></th>
    </tr>
    <tr>
      <th><%= render 'relationships/followbutan', user: user %></th>
    </tr>
  </tbody>
</table>